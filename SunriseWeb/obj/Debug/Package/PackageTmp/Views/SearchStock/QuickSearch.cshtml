                                                    <th>1.50-1.99</th>
                                                    <th>2.00-2.99</th>
                                                    <th>3.00-99.99</th>
                                                </tr>
                                            </thead>
                                            <tbody id="tbodyquicksearch">
                                            </tbody>
                                        </table>
                                    </div>
                                    <div class="ps-scrollbar-x-rail" style="width: 984px; left: 0px; bottom: 0px;"><div class="ps-scrollbar-x" tabindex="0" style="left: 0px; width: 837px;"></div></div><div class="ps-scrollbar-y-rail" style="top: 0px; right: 0px;"><div class="ps-scrollbar-y" tabindex="0" style="top: 0px; height: 0px;"></div></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- The Modal -->
    <div class="modal fade quik-src" id="quick-search-main">
        <div class="modal-dialog  modal-sm modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title" id="modalheader">0.18-0.22</h4>
                    <button type="button" class="close" data-dismiss="modal">×</button>
                </div>
                <div class="modal-body">
                    <div class="iner-tbl">
                        <table>
                            <thead>

                                <tr>
                                </tr>
                            </thead>
                            <tbody id="tbodyQuickSearchInner">
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn" onclick="Submit()">@LanguageProvider.get("search")</button>
                    <button type="button" class="btn" data-dismiss="modal">@LanguageProvider.get("close")</button>
                </div>
            </div>
        </div>
    </div>
</div>

<!------------- end quick search ---------------->
@section scripts{
    <script type="text/javascript" src="~/Content/Plugins/multiselect/bootstrap-multiselect.js"></script>
    <script src="~/Content/js/Pages/QuickSearch.js"></script>
}