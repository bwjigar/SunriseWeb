@using SunriseWeb.Resources;
@model SunriseWeb.Models.ChangePasswordModel
@{
    ViewBag.Title = "ChangePassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="dv-dsp-inblk bdr-btm pb-0">
            <div class="main-header-page">
                <a href="">
                    <h5>@LanguageProvider.get("Change_Password")</h5>
                </a>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-12 fr-pass-sec">
        <div class="forgot-password">
            @using (Html.BeginForm("ChangePassword", "Account", FormMethod.Post, new { id = "frmChangePassword" }))
            {
                <div class="row">
                    <div class="col-6 offset-md-3">
                        <div class="form-group">
                            <label>@LanguageProvider.get("Current_Password")</label>
                            @Html.PasswordFor(x => x.Password, new { @value = Model.Password, @class = "form-control ng-pristine ng-untouched ng-valid ng-empty", @placeholder = @LanguageProvider.get("Current_Password") })
                            @Html.ValidationMessageFor(m => m.Password)
                        </div>
                        <div class="form-group">
                            <label>@LanguageProvider.get("New_Password")</label>
                            @Html.PasswordFor(x => x.NewPassword, new { @value = Model.NewPassword, @class = "form-control ng-pristine ng-untouched ng-valid ng-empty", @placeholder = @LanguageProvider.get("New_Password") })
                            @Html.ValidationMessageFor(m => m.NewPassword)
                        </div>
                        <div class="form-group">
                            <label>@LanguageProvider.get("Confirm_Password")</label>
                            @Html.PasswordFor(x => x.ConfirmPassword, new { @value = Model.ConfirmPassword, @class = "form-control ng-pristine ng-untouched ng-valid ng-empty", @placeholder = @LanguageProvider.get("Confirm_Password") })
                            @Html.ValidationMessageFor(m => m.ConfirmPassword)
                        </div>
                        <div class="form-group col-12 col-sm-6 offset-sm-3 mb-0">
                            <button type="submit" class="btn btn-primary change-pass-btn">@LanguageProvider.get("Change_Password")</button>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
@section scripts{
    <script type="text/javascript">
        $(document).ready(function () {
            if ('@TempData["Message"]' != '') {
                 toastr.success('@TempData["Message"]');
            }
        });
    </script>
}

