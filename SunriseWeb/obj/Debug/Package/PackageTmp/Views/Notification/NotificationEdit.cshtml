
@{
    ViewBag.Title = "NotificationEdit";
    <link href="~/Content/css/daterangepicker.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/Content/Plugins/multiselect/bootstrap-multiselect.css" type="text/css">
    <style>
        .offer-input1 {
            width: 155px;
        }

        .offer-history-section .offer-label {
            width: 105px;
        }
        .btn-group > .btn:first-child {
            width: 164px;
        }
        .dropdown-menu.show {
            max-height: 350px;
            overflow-y: auto;
            width:315px;
        }
        .multiselect-container > li > a > label {
            padding: 3px 0px 3px 15px;
            font-size:14px;
        }

        .multiselect-container > li > a > label:focus {
            outline:none;
        }
    </style>
}

<div class="container-fluid order-history-section offer-history-section">
    <div class="row">
        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
            <div class="order-title">
                <h2>Notification Master Edit</h2>
            </div>
        </div>
    </div>
    <div class="order-history-data admin muser">
        <div class="row">
            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12">
                <div class="col-xl-3 col-lg-6 col-md-3 col-sm-6 col-12 float-left mt-2">
                    <div class="order-date common-order">
                        <div class="offer-label">Date:</div>
                        <input type="text" name="Date" id="txtDate" value="" class="offer-input offer-input1" />
                    </div>
                </div>
                <div class="col-xl-3 col-lg-3 col-md-3 col-sm-6 col-12 float-left mt-2">
                    <div class="common-order">
                        <div class="offer-label">Trans ID:</div>
                        <input type="text" id="txtTransId" class="form-control common-control" style="width: 165px" />
                    </div>
                </div>
                <div class="col-xl-3 col-lg-3 col-md-3 col-sm-6 col-12 float-left mt-2">
                    <div class="common-order">
                        <div class="offer-label">Country:</div>
                        <select id="ddlCountry" class="form-control common-control" multiple="multiple" style="width: 165px">
                        </select>
                    </div>
                </div>
                <div class="col-xl-3 col-lg-3 col-md-3 col-sm-6 col-12 float-left mt-2">
                    <div class="common-order">
                        <div class="offer-label">Company:</div>
                        <select id="ddlCompany" class="form-control common-control" multiple="multiple" style="width: 165px">
                        </select>
                    </div>
                </div>
                <div class="col-xl-3 col-lg-3 col-md-3 col-sm-6 col-12 float-left mt-2">
                    <div class="common-order">
                        <div class="offer-label">User Id:</div>
                        <select id="ddlUserId" class="form-control common-control" multiple="multiple" style="width: 165px">
                        </select>
                    </div>
                </div>
                <div class="col-xl-3 col-lg-3 col-md-3 col-sm-6 col-12 float-left mt-2">
                    <div class="common-order">
                        <div class="offer-label">User Name:</div>
                        <select id="ddlUserName" class="form-control common-control" multiple="multiple" style="width: 165px">
                        </select>
                    </div>
                </div>
                <div class="col-xl-3 col-lg-3 col-md-3 col-sm-6 col-12 float-left mt-2">
                    <div class="common-order">
                        <div class="offer-label">Device Type:</div>
                        <select id="ddlDeviceType" class="form-control common-control" multiple="multiple" style="width: 165px">
                        </select>
                    </div>
                </div>
                <div class="col-xl-3 col-lg-3 col-md-3 col-sm-6 col-12 float-left mt-2">
                    <div class="common-order">
                        <div class="offer-label">Valid Days:</div>
                        <input type="text" id="txtValidDays" class="form-control common-control" style="width:165px" />
                    </div>
                </div>
                <div class="col-xl-3 col-lg-3 col-md-3 col-sm-6 col-12 float-left mt-2">
                    <div class="common-order">
                        <div class="offer-label">Notification Name:</div>
                        <input type="text" id="txtNotificationName" class="form-control common-control" style="width:165px" />
                    </div>
                </div>
                <div class="col-xl-6 col-lg-3 col-md-7 col-sm-6 col-12 float-left mt-2">
                    <div class="common-order">
                        <div class="offer-label">Notification Text:</div>
                        <textarea id="txtNotificationText" class="form-control common-control" style="width:99%;height:70px;"></textarea>
                    </div>
                </div>
                <div class="col-xl-12 col-lg-6 col-md-6 col-sm-6 col-12 float-left">
                    <ul class="offer-inbtn pull-right mrtop src-rest-topbtn mt-2 mb-2">
                        <li>
                            <button class="offer-btn" onclick="" style="padding:6px 8px;">
                                <i class="fa fa-search fa-2x" style="margin-right:0px"></i>
                            </button>
                        </li>
                        <li>
                            <button class="offer-btn" onclick="" style="padding:6px 8px;">
                                <i class="fa fa-save fa-2x" style="margin-right:0px"></i>
                            </button>
                        </li>
                        <li>
                            <button class="offer-btn" onclick="" style="padding:6px 8px;">
                                <i class="fa fa-globe fa-2x" style="margin-right:0px"></i>
                            </button>
                        </li>
                        <li>
                            <button class="offer-btn" onclick="" style="padding:6px 8px;">
                                <i class="fa fa-refresh fa-2x" style="margin-right:0px"></i>
                            </button>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <!-- ====== table ====== -->
    <div class="aggrid-section">
        <div class="row">
            <div class="col-xl-12">
                <div class="agGrid-box-main mt-2">
                    <div id="myGrid" style="width: 100%;height:520px;" class="ag-theme-balham">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts{
    <script type="text/javascript" src="~/Content/Plugins/multiselect/bootstrap-multiselect.js"></script>
    <script src="~/Content/js/moment.min.js"></script>
    <script src="~/Content/js/daterangepicker.min.js"></script>
    <script src="~/Content/js/ag-grid-enterprise.min.js"></script>
    <script src="~/Content/js/common.js"></script>
    <script src="~/Content/js/Pages/NotificationEdit.js"></script>
}


