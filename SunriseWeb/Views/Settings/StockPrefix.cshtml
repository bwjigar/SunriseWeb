@{
    ViewBag.Title = "Supplier Stock Prefix";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid order-history-section manage-user apifilter">
    <div class="row">
        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
            <div class="order-title">
                <h2>Supplier Stock Prefix</h2>
            </div>
        </div>
    </div>
    <div class="row col-md-12">
        <div class="col-md-12">
            <div class="form-group">
                <label class="offer-label" for="txtAPI">Supplier Name <span style="color:red;">*</span></label>
                <div class="col-sm-4">
                    <select class="form-control select2" id="DdlSupplierName" name="DdlSupplierName" onchange="SupplierNameChange();">
                    </select>
                </div>
            </div>
        </div>

    </div>
    <div id="dv_PrefixValue" style="display:none;">
        <div class="row mg0 pd5" style="text-align: center;">
            <div class="col-md-7 table-responsive">
                <table id="tbl_Prefix" class="table table-hover table-bordered" style="width:100%; display:inline-block;">
                    <thead>
                        <tr>
                            <th style="width:0%;">Sr.</th>
                            <th style="width:20%;">Pointer <span style="color:red;">*</span></th>
                            <th style="width:20%;">Prefix <span style="color:red;">*</span> <span style="font-size: 10px;">(Ex. IND, HK, KUW)</span></th>
                            <th style="width:0%;">Delete</th>
                        </tr>
                    </thead>
                    <tbody id="tblbody_Prefix" class="ui-sortable">
                    </tbody>
                </table>
            </div>
            <div class="col-md-5">
                <ul class="offer-inbtn pull-right">
                    <li>
                        <button onclick="AddNewPrefix();" class="save offer-btn"><i class="fa fa-plus"></i>Add Row</button>
                    </li>
                    <li>
                        <button onclick="SavePrefixData();" class="save offer-btn" id="Save_btn" style="display:none;"><i class="fa fa-save" aria-hidden="true"></i>&nbsp;Save</button>
                    </li>
                    <li>
                        <button onclick="RemovePrefixData();" class="save offer-btn" id="Remove_btn" style="display:none;"><i class="fa fa-trash" aria-hidden="true"></i>&nbsp;Delete All</button>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script src="~/Content/js/Pages/StockPrefix.js"></script>
}

