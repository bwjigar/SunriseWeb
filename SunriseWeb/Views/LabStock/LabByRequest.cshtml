<div class="container-fluid order-history-section">
    <div class="row">
        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
            <div class="order-title">
                <h2>Buy Request</h2>
            </div>
        </div>
    </div>
    <div class="order-history-data admin">
        <div class="row">
            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12">
                <div class="col-xl-3 col-lg-6 col-md-6 col-sm-6 col-12 float-left mb-2">
                    <div class="order-date common-order">
                        <div class="offer-label">Date:</div>
                        <input type="text" id="txtFromDate" name="From" value="" class="offer-input" autocomplete="off" />
                        <input type="text" id="txtToDate" name="To" value="" class="offer-input" autocomplete="off" />
                    </div>
                </div>
                @if (SunriseWeb.Helper.SessionFacade.UserSession.isadmin == 1 || SunriseWeb.Helper.SessionFacade.UserSession.iUserid == 41)
                {
                    <div class="col-xl-3 col-lg-3 col-md-6 col-sm-6 col-12 float-left mb-2">
                        <div class="order-company-name common-order">
                            <div class="offer-label">Search:</div>
                            <input id="txtEntryBy" placeholder="Entry User Name"
                                   type="text" class="form-control common-control" autocomplete="off">
                        </div>
                    </div>
                }
                <div class="col-xl-3 col-lg-3 col-md-6 col-sm-6 col-12 float-left mb-2">
                    <div class="order-stone-id common-order">
                        <div class="offer-label">Ref No:</div>
                        <input id="txtRefNo" class="form-control common-control" placeholder="Ref No. / Certi No." type="text" autocomplete="off">
                    </div>
                </div>
                @if (SunriseWeb.Helper.SessionFacade.UserSession.isadmin == 1 || SunriseWeb.Helper.SessionFacade.UserSession.iUserid == 41)
                {
                    <div class="col-xl-3 col-lg-3 col-md-6 col-sm-6 col-12 float-left mb-2">
                        <span class="btn-spn-opt" onclick="ActiveOrNot('Pending');" id="Pending">Pending</span>
                        <span class="btn-spn-opt" onclick="ActiveOrNot('Approve');" id="Approve">Approved</span>
                        <span class="btn-spn-opt" onclick="ActiveOrNot('Reject');" id="Reject">Rejected</span>
                        <span class="btn-spn-opt" onclick="ActiveOrNot('Supp_Status');" id="Supp_Status">Supp. Status</span>
                    </div>
                }
                else
                {
                    <div class="col-xl-5 col-lg-3 col-md-6 col-sm-6 col-12 float-left mb-2">
                        <span class="btn-spn-opt" onclick="ActiveOrNot('Pending');" id="Pending">Pending</span>
                        <span class="btn-spn-opt" onclick="ActiveOrNot('Approve');" id="Approve">Approved</span>
                        <span class="btn-spn-opt" onclick="ActiveOrNot('Reject');" id="Reject">Rejected</span>
                        <span class="btn-spn-opt" onclick="ActiveOrNot('Supp_Status');" id="Supp_Status">Supp. Status</span>
                    </div>
                }
            </div>
            <div id="DivTCount" class="col-xl-5 col-lg-6 col-md-6 col-sm-6">
                <div id="tab1TCount" class="row" style="display: none;margin-top: -2px;margin-bottom: -10px;padding: 0px 10px;">
                    <div><center><span class="g-head-t">Pcs</span></center><center><span id="tab1Pcs" class="g-amt-t"></span></center></div>
                    <div><center><span class="g-head-t">CTS</span></center><center><span id="tab1CTS" class="g-amt-t"></span></center></div>
                    <div><center><span class="g-head-t">Rap Value</span></center><center><span id="tab1RapValue" class="g-amt-t"></span></center></div>
                    <div><center><span class="g-head-t">Sunrise Disc(%)</span></center><center><span id="tab1SunriseDiscPer" class="g-amt-t"></span></center></div>
                    <div><center><span class="g-head-t">Sunrise Value US($)</span></center><center><span id="tab1SunriseValueUSDoller" class="g-amt-t"></span></center></div>
                </div>
            </div>
            @if (SunriseWeb.Helper.SessionFacade.UserSession.iUserid == 2003)
            {
                <div class="col-xl-4 col-lg-4 col-md-3 col-sm-12">
                    <div class="col-xl-9 col-lg-9 col-md-9 col-sm-9 col-12 float-left mb-2" style="margin-top: 9px;">
                        <div class="order-stone-id common-order">
                            <div class="offer-label">Supp. Status:</div>
                            <select id="ddlSuppStatus" name="ddlSuppStatus" class="form-control common-control">
                                <option value="0">Select</option>
                                <option value="Confirm">Confirm</option>
                                <option value="Hold">Hold</option>
                                <option value="Bidded">Bidded</option>
                                <option value="Waiting">Waiting</option>
                                <option value="Qc Pending">Qc Pending</option>
                                <option value="Qc Reject">Qc Reject</option>
                                <option value="Bid Reject">Bid Reject</option>
                                <option value="Sold">Sold</option>
                                <option value="Other">Other</option>
                                <option value="Transit">Transit</option>
                                <option value="Cancel">Cancel</option>
                            </select>
                        </div>
                    </div>
                    <ul class="offer-inbtn pull-right mrtop src-rest-topbtn mt-2 mb-2">
                        <li>
                            <button class="offer-btn" onclick="SaveApply()"><i class="fa fa-check" aria-hidden="true"></i>Apply</button>
                        </li>
                    </ul>
                </div>
                <div class="col-xl-3 col-lg-4 col-md-3 col-sm-12">
                    <ul class="offer-inbtn pull-right mrtop src-rest-topbtn mt-2 mb-2" style="margin: 20px 54px 0;">
                        <li>
                            <button class="offer-btn" onclick="GetLabByRequest()"><i class="fa fa-search" aria-hidden="true"></i>@LanguageProvider.get("search")  </button>
                        </li>
                        <li>
                            <button class="offer-btn" onclick="reset()"><i class="fa fa-refresh" aria-hidden="true"></i>@LanguageProvider.get("reset")</button>
                        </li>
                    </ul>
                </div>
            }
            else
            {
                <div class="col-xl-7 col-lg-4 col-md-3 col-sm-12">
                    <ul class="offer-inbtn pull-right mrtop src-rest-topbtn mt-2 mb-2" style="margin: 20px 54px 0;">
                        <li>
                            <button class="offer-btn" onclick="GetLabByRequest()"><i class="fa fa-search" aria-hidden="true"></i>@LanguageProvider.get("search")  </button>
                        </li>
                        <li>
                            <button class="offer-btn" onclick="reset()"><i class="fa fa-refresh" aria-hidden="true"></i>@LanguageProvider.get("reset")</button>
                        </li>
                        @if (SunriseWeb.Helper.SessionFacade.UserSession.iUserType == 2 && SunriseWeb.Helper.SessionFacade.UserSession.iUserid == 41)
                        {
                            <li id="li_Approve">
                                <button class="offer-btn" onclick="ApproveModal()"><i class="fa fa-check" aria-hidden="true"></i>Approve</button>
                            </li>
                            <li id="li_Reject">
                                <button class="offer-btn" onclick="RejectModal()"><i class="fa fa-close" aria-hidden="true"></i>Reject</button>
                            </li>
                        }
                    </ul>
                </div>
            }
        </div>
    </div>
