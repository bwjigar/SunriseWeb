
@{
    ViewBag.Title = "StoneDetail";
    Layout = "~/Views/Shared/_BeforeLoginLayout.cshtml";
    <link href="~/Content/Login/css/ragistration.css" rel="stylesheet" />
}
<style>
    .ulButtons {
        float: right;
        padding: 0;
        background: none;
        border-radius: 0 10px 10px 10px;
        width: auto;
        position: relative;
        margin-bottom: 15px;
    }
</style>

<div class="row">
    <div class="col-xl-12 col-lg-12 col-md-12 col-12">
        <h1 style="color:#fff;text-align:center;">Dna Details</h1>
        <ul class="ulButtons">
            <input type="hidden" id="sendtype" value="" />
            <li><a href="javascript:void(0);" onclick="openpopup('image')" class="whatsapp" data-toggle="tooltip" data-placement="bottom" title="Whatsapp"><i class="fa fa-whatsapp" aria-hidden="true"></i></a></li>
            <li><a href="javascript:void(0);" onclick="openpopup('video')" class="whatsapp" data-toggle="tooltip" data-placement="bottom" title="Whatsapp"><i class="fa fa-whatsapp" aria-hidden="true"></i></a></li>
            <li><a href="javascript:void(0);" onclick="openpopup('certi')" class="whatsapp" data-toggle="tooltip" data-placement="bottom" title="Whatsapp"><i class="fa fa-whatsapp" aria-hidden="true"></i></a></li>
            @*<li><a href="#" class="skype" data-toggle="tooltip" data-placement="bottom" title="Skype"><i class="fa fa-skype" aria-hidden="true"></i></a></li>*@
        </ul>

    </div>
</div>
<!-- main content -->
<div class="row">
    <div class="col-lg-6 col-md-12 col-sm-12 col-xs-12">
        <div class="stone-det-img-vid">
            <div class="row m-0">
                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                    <div class="stone-details-img-caption two">
                        <ul class="nav nav-tabs">
                            <li class="nav-item caption-img img-caption-1 videotab col-xs-11 col-sm-11  col-md-5">
                                <a class="nav-link active" id="photo" data-toggle="tab" href="#photo-image">
                                    <img src="~/Content/images/photo.png">
                                    <p>IMAGE</p>
                                </a>
                            </li>


                            <li class="nav-item caption-img video-caption-1 col-xs-11 col-sm-11 col-md-5">
                                <a class="nav-link" id="video" data-toggle="tab" href="#video-rec">
                                    <img src="~/Content/images/camera.png">
                                    <p>VIDEO</p>
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                    <div class="tab-content">
                        <div class="stone-det-big-img tab-pane active" id="photo-image">
                            <h2>IMAGE</h2>
                            @if (Model.bPRimg == true || Model.bHBimg == true || Model.bHTimg == true || Model.bASimg == true)
                            {
                                <div class="slick-slider">
                                    @if (Model.bPRimg == true)
                                    {
                                        <div class="enlarge_pane_contain">
                                            <div class="enlarge_pane">
                                                <div class="enlarge">
                                                    <div class="enlarge_contain">
                                                        <img src="https://4e0s0i2r4n0u1s0.com/img/@(Model.certi_no)/PR.jpg" class="img-responsive">
                                                    </div>
                                                    <a href="https://4e0s0i2r4n0u1s0.com/img/@(Model.certi_no)/PR.jpg" class="enlarge_btn" title="Toggle Zoom"></a>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                    @if (Model.bASimg == true)
                                    {
                                        <div class="enlarge_pane_contain">
                                            <div class="enlarge_pane">
                                                <div class="enlarge">
                                                    <div class="enlarge_contain">
                                                        <img src="https://4e0s0i2r4n0u1s0.com/img/@(Model.certi_no)/AS.jpg" class="img-responsive">
                                                    </div>
                                                    <a href="https://4e0s0i2r4n0u1s0.com/img/@(Model.certi_no)/AS.jpg" class="enlarge_btn" title="Toggle Zoom"></a>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                    @if (Model.bHBimg == true)
                                    {
                                        <div class="enlarge_pane_contain">
                                            <div class="enlarge_pane">
                                                <div class="enlarge">
                                                    <div class="enlarge_contain">
                                                        <img src="https://4e0s0i2r4n0u1s0.com/img/@(Model.certi_no)/HB.jpg" class="img-responsive">
                                                    </div>
                                                    <a href="https://4e0s0i2r4n0u1s0.com/img/@(Model.certi_no)/HB.jpg" class="enlarge_btn" title="Toggle Zoom"></a>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                    @if (Model.bHTimg == true)
                                    {
                                        <div class="enlarge_pane_contain">
                                            <div class="enlarge_pane">
                                                <div class="enlarge">
                                                    <div class="enlarge_contain">
                                                        <img src="https://4e0s0i2r4n0u1s0.com/img/@(Model.certi_no)/HT.jpg" class="img-responsive">
                                                    </div>
                                                    <a href="https://4e0s0i2r4n0u1s0.com/img/@(Model.certi_no)/HT.jpg" class="enlarge_btn" title="Toggle Zoom"></a>
                                                </div>
                                            </div>
                                        </div>
                                    }

                                </div>
                            }
                            else
                            {
                                <img src="~/Content/images/no-img1.jpg" width="100%" height="400">
                            }
                        </div>
                        <div class="stone-det-big-img tab-pane fade" id="video-rec">
                            <div class="VidNoDiv">
                                <h2>VIDEO </h2>
                                @if (Model.movie_url != null && Model.movie_url != "")
                                {
                                    <b style="color: #1c2f7a; ">Stone Video Link : </b><a href="@Model.movie_url" target="_blank" style="color: #1c2f7a;">Click Here...</a>
                                    <iframe height="400" frameborder="0" id="video1" src="@Model.movie_url&amp;autoplay=1" style="text-align: center; width: 100%;"></iframe>
                                }
                                else
                                {
                                    <img src="/Content/images/no-video-available.png" width="100%" height="400">
                                }
                            </div>
                        </div>

                    </div>
                    <div class="col-lg-12 col-sm-12 p-0 mt-4">
                        <div class="stone-detail-bx-main download-box-main">
                            <div class="stone-detail-head">
                                Download
                            </div>
                            <div class="download-main">
                                <ul>
                                    <li onclick="Download('Excel')">EXCEL</li>
                                    @if (Model.bPRimg == true || Model.bHBimg == true || Model.bHTimg == true || Model.bASimg == true)
                                    {
                                        <li onclick="Download('Image')">IMAGE</li>
                                    }
                                    else
                                    {
                                        <li class="video-not-avlabl">IMAGE</li>
                                    }
                                    @if (Model.movie_url != null && Model.movie_url != "")
                                    {
                                        <li onclick="Download('Video')">VIDEO</li>
                                    }
                                    else
                                    {
                                        <li class="video-not-avlabl">VIDEO</li>
                                    }
                                    @if (Model.view_certi_url != null)
                                    {
                                        <li onclick="Download('Certificate')">CERTIFICATE</li>
                                    }
                                    else
                                    {
                                        <li class="video-not-avlabl">CERTIFICATE</li>
                                    }
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-6 col-md-12 col-sm-12 col-xs-12">
        <div class="stone-det-big-img p-0" ng-hide="CertDiv">

            <iframe id="CertiFrame" width="100%" height="600" frameborder="0" src="@Model.view_certi_url" style="text-align: center; width: 100%;"></iframe>
        </div>
    </div>
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="row">
            <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                <div class="stone-detail-bx-main">
                    <div class="stone-detail-head">
                        Aditional Info
                    </div>
                    <div class="stn-dtl-row">
                        <ul>
                            <li>Stock ID :</li>
                            <li>@Model.stone_ref_no</li>
                        </ul>
                        <ul>
                            <li>Status :</li>
                            <li>@Model.status</li>
                        </ul>
                        <ul>
                            <li>Certi No :</li>
                            <li>@Model.certi_no</li>
                        </ul>
                        <ul>
                            <li>Cut :</li>
                            <li>@Model.cut</li>
                        </ul>
                        <ul>
                            <li>Location :</li>
                            <li>@Model.Location</li>
                        </ul>
                        <ul>
                            <li>Polish :</li>
                            <li>@Model.polish</li>
                        </ul>
                        <ul>
                            <li>Shape :</li>
                            <li>@Model.shape</li>
                        </ul>
                        <ul>
                            <li>Symmetry :</li>
                            <li>@Model.symm</li>
                        </ul>
                        <ul>
                            <li>Carat :</li>
                            <li>@Model.cts</li>
                        </ul>
                        <ul>
                            <li>Fls :</li>
                            <li>@Model.fls</li>
                        </ul>
                        <ul>
                            <li>Color :</li>
                            <li>@Model.color</li>
                        </ul>
                        <ul>
                            <li>Table Black:</li>
                            <li>@Model.table_natts</li>
                        </ul>
                        <ul>
                            <li>Clarity :</li>
                            <li>@Model.clarity</li>
                        </ul>
                        <ul>
                            <li>Crown Black:</li>
                            <li>@Model.Crown_Natts</li>
                        </ul>
                        <ul>
                            <li>Rap Price :</li>
                            <li id="liRapPrice">@Model.cur_rap_rate</li>
                        </ul>
                        <ul>
                            <li>Table White:</li>
                            <li>@Model.table_per</li>
                        </ul>
                        <ul>
                            <li>Rap Value :</li>
                            <li id="liRapValue">@Model.rap_amount</li>
                        </ul>
                        <ul>
                            <li>Crown White :</li>
                            <li>@Model.Crown_Inclusion</li>
                        </ul>
                        <ul>
                            <li>Disc % :</li>
                            <li style="color: red;">@Model.sales_disc_per</li>
                        </ul>
                        <ul>
                            <li>&nbsp;</li>
                            <li>&nbsp;</li>
                        </ul>
                        <ul>
                            <li>Total$ :</li>
                            <li id="liTotal" style="color: red;">@Model.net_amount</li>
                        </ul>
                        <ul>
                            <li>&nbsp;</li>
                            <li>&nbsp;</li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                <div class="stone-detail-bx-main">
                    <div class="stone-detail-head">
                        Inclusion Details
                    </div>
                    <div class="stn-dtl-row">
                        <ul>
                            <li>Length :</li>
                            <li>@Model.length</li>
                        </ul>
                        <ul>
                            <li>Crown Angle :</li>
                            <li>@Model.crown_angle</li>
                        </ul>
                        <ul>
                            <li>Width :</li>
                            <li>@Model.width</li>
                        </ul>
                        <ul>
                            <li>Crown Height :</li>
                            <li>@Model.crown_height</li>
                        </ul>
                        <ul>
                            <li>Depth :</li>
                            <li>@Model.depth</li>
                        </ul>
                        <ul>
                            <li>Pav Angle :</li>
                            <li>@Model.pav_angle</li>
                        </ul>
                        <ul>
                            <li>Depth % :</li>
                            <li>@Model.depth_per</li>
                        </ul>
                        <ul>
                            <li>Pav Height :</li>
                            <li>@Model.pav_height</li>
                        </ul>

                        <ul style="border-left: 1px solid #ddd;">
                            <li style="white-space: normal;">Table %  &nbsp; :</li>
                            <li style="white-space: normal;">@Model.table_per</li>
                        </ul>

                        <ul>
                            <li>Culet :</li>
                            <li>@Model.sCulet</li>
                        </ul>

                        <ul>
                            <li>Girdle % :</li>
                            <li>@Model.girdle_per</li>
                        </ul>
                        <ul>
                            <li>Lab :</li>
                            <li>@Model.lab</li>
                        </ul>
                        <ul>
                            <li>Girdle Type:</li>
                            <li>@Model.girdle_type</li>
                        </ul>
                        <ul>
                            <li>Inscription :</li>
                            <li>@Model.sInscription</li>
                        </ul>

                        <ul style="width: 100%; border-right: 0px solid #ddd;">
                            <li style="width: 100%; white-space: normal;">Key to Symbols&nbsp; : <span style="font-weight: 500;">@Model.symbol</span></li>
                        </ul>

                        <ul style="width: 100%; border-right: 0px solid #ddd;">
                            <li style="width: 100%; white-space: normal;">GIA Comments : <span style="font-weight: 500;">@Model.sComments</span></li>
                        </ul>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade social-model" id="MobileModal" role="dialog">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                @* <h4 class="modal-title">Place Order</h4>*@
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <form class="form-horizontal" id="frmSaveOrder">
                <div class="modal-body">
                    <div class="form-group">
                        <label>Mobile No :</label>
                        <input type="text" class="form-control required" name="MobileNo" id="txtMobileNo" placeholder="Enter MobileNo with country code">
                    </div>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-darkblue" type="button" onclick="sendWhatsapp()">OK</button>
                    <button class="btn btn-darkblue" type="button" data-dismiss="modal">Cancel</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section scripts{
    <script>

    </script>
}