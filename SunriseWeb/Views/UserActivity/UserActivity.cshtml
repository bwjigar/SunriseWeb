@{
    ViewBag.Title = "User Activity";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.ClassName = "search-contnt";
    <link href="~/Content/css/daterangepicker.css" rel="stylesheet" />
}
<style type="text/css">
    .ag-paging-page-summary-panel {
        left: 10px;
        position: relative;
    }
</style>

<div class="container-fluid order-history-section">
    <div class="row">
        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
            <div class="order-title">
                <h2>User Activity</h2>
            </div>
        </div>
    </div>
    <div class="order-history-data admin muser">
        <form id="frm">
            <div class="col-xl-4 col-lg-5 col-md-7 col-sm-6 col-12 float-left">
                <div class="common-order">
                    <div class="offer-label">From Date:</div>
                    <input type="text" name="From" id="txtFromDate" autocomplete="off" value="" class="commonFromRange offer-input offer-input1" />
                    <input type="text" name="To" id="txtToDate" autocomplete="off" value="" class="commonToRange offer-input offer-input1" />
                </div>
            </div>
            <div class="col-xl-5 col-lg-6 col-md-6 col-sm-6 col-12 float-left pl-2 pr-2 mb-2">
                <div class="order-company-name common-order">
                    <div class="offer-label">Company:</div>
                    <input id="txtCompanyName" placeholder="Company Name / User Name" type="text" class="form-control common-control" autocomplete="off">
                </div>
            </div>
            @*<div class="col-xl-3 col-lg-3 col-md-7 col-sm-6 col-12 float-left pl-2 pr-2">
                <div class="common-order">
                    <div class="offer-label">Type:</div>
                    <select id="ddlType" class="form-control common-control">
                        <option value="">Select an Option</option>
                        <option value="UserName">User Name</option>
                        <option value="Company">Company Name</option>
                        <option value="Customer">Customer Name</option>
                    </select>
                </div>
            </div>
            <div class="col-xl-2 col-lg-4 col-md-7 col-sm-6 col-12 float-left pl-2 pr-2">
                <div class="common-order">
                    <input type="text" id="txtCommonName" onkeypress="return CommonNameKeypress(event)" class="form-control common-control">
                </div>
            </div>*@
            <div class="mt-1 mob-view">&nbsp;</div>
            <div class="col-xl-3 col-lg-7 col-md-7 col-sm-6 col-12 float-left pl-2 pr-2">
                <ul class="offer-inbtn p-0 mb-2">
                    <li>
                        <button type="button" id="btnSearch" class="offer-btn"><i class="fa fa-search" aria-hidden="true"></i>Search</button>
                    </li>
                    <li>
                        <button type="button" id="btnExcel" class="offer-btn"><i class="fa fa-file-excel-o" aria-hidden="true"></i>Excel</button>
                    </li>
                    <li>
                        <button type="button" id="btnReset" class="offer-btn"><i class="fa fa-refresh" aria-hidden="true"></i>Reset</button>
                    </li>
                </ul>
            </div>
        </form>
    </div>

    <div class="aggrid-section">
        <!---- =============== start ag-grid =============== ---->
        <div id="myGrid" style="width: 100%;height:520px;" class="ag-theme-balham">
        </div>
        <!---- =============== end ag-grid ================= ----->
    </div>
</div>
<!--- end of order-history part---->
@section scripts{

    <script src="~/Content/js/moment.min.js"></script>
    <script src="~/Content/js/daterangepicker.min.js"></script>
    <script src="~/Content/js/ag-grid-enterprise.min.js"></script>
    <script src="~/Content/js/common.js"></script>
    <script src="~/Content/js/Pages/UserActivityUpdate.js"></script>
}


